<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="#bc91ff">

    <TextView android:text="Tec_Tac_Toe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#994eff"
        android:textSize="@dimen/abc_action_bar_progress_bar_size"
        android:textStyle="bold"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/player"
        android:layout_above="@+id/gridLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="46dp"
        android:textStyle="bold"
        android:textSize="@dimen/abc_text_size_large_material" />

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/gridLayout"
        android:rowCount="3"
        android:columnCount="3"
        tools:targetApi="ice_cream_sandwich"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">

        <Button
            android:id="@+id/b1"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:text=" "
            android:onClick="b1Click" />
        <Button
            android:id="@+id/b2"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:text=" "
            android:onClick="b2Click"
            />
        <Button
            android:id="@+id/b3"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:text=" "
            android:onClick="b3Click"
            />
        <Button
            android:id="@+id/b4"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:text=" "
            android:onClick="b4Click"
            />
        <Button
            android:id="@+id/b5"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:text=" "
            android:onClick="b5Click"
            />
        <Button
            android:id="@+id/b6"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:text=" "
            android:onClick="b6Click"
            />
        <Button
            android:id="@+id/b7"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:text=" "
            android:onClick="b7Click"
            />
        <Button
            android:id="@+id/b8"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:text=" "
            android:onClick="b8Click"
            />
        <Button
            android:id="@+id/b9"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:text=" "
            android:onClick="b9Click"
            />
    </GridLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="clear"
        android:id="@+id/clear_btn"
        android:layout_marginTop="52dp"
        android:layout_below="@+id/gridLayout"
        android:layout_centerHorizontal="true"
        android:textColor="#bc91ff"
        android:onClick="clear_btn_click"/>

</RelativeLayout>
